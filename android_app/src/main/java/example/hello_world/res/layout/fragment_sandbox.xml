<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="16dp"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/helloBazelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="32dp"
            android:textColor="@color/bazel_green"
            android:text="@string/thinking_face"/>

    <Button
            android:id="@+id/clickMeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/bazel_green"
            android:textColor="@color/color_on_bazel_green"
            android:layout_marginTop="16dp"
            android:text="@string/click_me_button"/>
    <TextView
            android:id="@+id/locationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dp"
            android:layout_gravity="center_horizontal"
            android:textSize="32dp"
            android:textColor="@color/bazel_white"
            android:text="@string/gps_position"/>
    <Button
            android:id="@+id/sendTelegramTest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/bazel_green"
            android:textColor="@color/color_on_bazel_green"
            android:layout_marginTop="16dp"
            android:text="@string/send_telegram_text"/>
    <TextView
            android:id="@+id/receiveTelegramTestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20.0dp"
            android:layout_gravity="center_horizontal"
            android:textSize="32dp"
            android:textColor="@color/bazel_white"/>
    <Button
            android:id="@+id/sendDummyNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/bazel_green"
            android:textColor="@color/color_on_bazel_green"
            android:layout_marginTop="16dp"
            android:text="@string/send_dummy_notification"/>
</LinearLayout>